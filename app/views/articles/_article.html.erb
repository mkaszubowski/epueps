<article class = "article">
  <header>
    <h2><%= link_to article.title, article_path(article) %></h2>
    <span class="meta">
      <%= article.published_at %> |
      <%= article.author %>

    </span>
  </header>
  <p><%= raw article.body_text %></p>

  <%= link_to 'Czytaj dalej...', article, class: 'read-more' %>
</article>