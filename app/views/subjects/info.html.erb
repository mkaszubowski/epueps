<% provide :title, "#{@subject.name} - informacje" %>

<div class="subject-info-content">
  <h1><%= @subject.name %> - informacje o przedmiocie</h1>
  <div class="subject-image">
    <%= image_tag @subject.image_url.to_s %>
  </div>

  <section class="table-of-contents">
    <h2>DostÄ™pne lekcje</h2>
    <%= render partial: 'subjects/table_of_contents',
        locals: {lessons: @lessons, subject: @subject} %>
  </section>
  <section class="description">
    <h2>Opis przedmiotu</h2>
    <p><%= @subject.description %></p>
  </section>
  <section class="intro-video-container">
    <iframe
      class = "intro-video"
      src = <%= @subject.embed_intro_video_link %> allowfullscreen>

      </iframe>
  </section>

  <%= link_to "Zacznij kurs", 
              subject_path(@subject), 
              class: "button button-primary" %> 
</div>