<%= simple_form_for @lesson, 
                    url: lesson_form_url(@subject, @lesson),
                    html: {class: "custom-form"} do |f| %>
  <%= f.input :name,        label: "Nazwa" %>
  <%= f.input :description, label: "Opis" %>
