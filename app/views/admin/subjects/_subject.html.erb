<tr>
  <td><%= link_to subject.name,
          admin_subject_path(subject) %></td>
  <td><%= subject.lessons_count %></td>
  <td><%= subject.created_at.strftime("%Y-%m-%d") %></td>
  <td><%= subject.popularity %></td>
  <% unless subject.deleted? %>
    <td><%= subject.published? ? "Opublikowany" : "Szkic" %></td>
  <% else %>
    <td>Usunięty</td>
  <% end %>
  <td>
    <!-- TODO: Add confirmation -->

    <%= link_to "Usuń",
                admin_subject_path(subject),
                method: :delete if can? :destroy, Subject %>
    <%= link_to "Edytuj",
                edit_admin_subject_path(subject) if can? :edit, Subject %>
    <%= link_to "Opublikuj",
          publish_admin_subject_path(subject) unless subject.published? || subject.deleted? %>
  </td>
</tr>
