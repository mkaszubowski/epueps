<%= simple_form_for @video, 
      url: admin_subject_lesson_videos_path(@subject, @lesson, @video),
      html: { class: "custom-form" } do |f| %>
  
  <%= f.input :name,    label: "Nazwa" %>
  <%= f.input :link,    label: "Link" %>
  <%= f.submit "Dodaj film",
                class: "button button-primary" %>
  
<% end %>