<% provide :title, "Rejestracja" %>

<div class='form-container'>

  <h1 class="center">Rejestracja</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "custom-form" }) do |f| %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :username, required: false, label: 'Imię' %>
      <%= f.input :password, required: true,
                  label: "Hasło" %>
      <%= f.input :password_confirmation, required: true,
                  label: "Potwierdź hasło" %>
    </div>

    <div class="form-actions">
      <%= f.button  :submit, "Zarejestruj się",
                    class: "button button-primary" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
