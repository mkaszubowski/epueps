<% provide :title, "Resetowanie hasła" %>

<h1 class="center">Zapomniałeś hasła?</h1>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "custom-form" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resetuj hasło", class: "button button-primary" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

