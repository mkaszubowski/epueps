<% provide :title, 'Zmien hasło' %>

<div class='form-container'>

  <h1 class='center'>Zmień hasło</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'custom-form' }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, label: "Nowe hasło", required: true, autofocus: true %>
      <%= f.input :password_confirmation, label: "Potwierdź hasło", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Zmień hasło', class: 'button button-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
