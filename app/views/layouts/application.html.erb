<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield :title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAXVNHYE0uUr08vL7ycXMYLrQ7PTjK-KDI">
  </script>
  <%= csrf_meta_tags %>
</head>
<body class = "<%="#{controller_name.dasherize}-controller #{action_name.dasherize}" %>" >

  <%= render 'layouts/header' %>

  <%= yield %>

  <% unless @splash || no_container?(yield(:no_container)) %>
    </div>
  <% end %>

  <%= render 'layouts/footer' %>

  <% if Rails.env.production? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-71736980-1', 'auto');
      ga('send', 'pageview');

    </script>
  <% end %>

</body>
</html>
